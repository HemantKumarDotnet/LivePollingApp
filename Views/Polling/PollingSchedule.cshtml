@{
    ViewData["Title"] = "Polling Schedule";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
} 
<div class="col-12 grid-margin">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">@ViewData["Title"]</h4>
            <form class="form-sample">
                <div class="row">
                    <div class="col-md-6">
                        <div class="form-group row">
                            <label class="col-sm-3 col-form-label">Date of Polling</label>
                            <div class="col-sm-9">
                                <input type="datetime" class="form-control" placeholder="dd/mm/yyyy" />
                            </div>
                        </div>
                    </div>
                    <div class="col-md-2">
                        <div class="form-group row">
                            <div class="form-check mx-sm-2">
                                <label class="form-check-label">
                                    <input type="checkbox" class="form-check-input" checked> IsActive
                                </label>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-2 float-end">
                        <button type="submit" class="btn btn-primary me-2">Save</button>
                    </div>
                    <div class="col-md-2 float-start"> 
                        <button class="btn btn-danger">Reset</button>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>

<div class="col-lg-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Records</h4> 
            <div class="table-responsive">
                <table class="table table-hover">
                    <thead>
                        <tr>
                            <th>Date</th> 
                            <th>Status</th>
                        </tr>
                    </thead>
                    <tbody>
                        <tr>
                            <td>12/05/2025</td> 
                            <td><label class="badge badge-danger">In-Active</label></td>
                        </tr>
                        <tr>
                            <td>12/05/2025</td>
                            <td><label class="badge badge-success">In-Active</label></td>
                        </tr>
                        
                       
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>