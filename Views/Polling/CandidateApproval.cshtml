<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
<script>
    $(document).ready(function () {
        function toggleFields() {
            const status = $('#ddlStatus').val();
            if (status === "1") {
                $('#dvLogo').show();
                $('#dvReason').hide();
            } else if (status === "0") {
                $('#dvLogo').hide();
                $('#dvReason').show();
            }
            else if (status === "") {
                $('#dvLogo').hide();
                $('#dvReason').hide();
            }
        }

        // Set ID on your <select> element like this:
        // <select id="ddlStatus" class="form-select">
        $('#ddlStatus').on('change', toggleFields);

        // Initial call
        toggleFields();
    });
</script>
