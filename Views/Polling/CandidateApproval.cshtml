
@{
    ViewData["Title"] = "Candidate Approval";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="col-12 grid-margin">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">@ViewData["Title"]</h4>
            <form class="form-sample">
                <div class="row">
                    <div class="col-md-6">
                        <div class="form-group row">
                            <label class="col-sm-3 col-form-label">Status</label>
                            <div class="col-sm-9">
                                <select id="ddlStatus" class="form-select">
                                    <option value="">Select</option>
                                    <option value="1">Approve</option>
                                    <option value="0">Reject</option>
                                </select>

                            </div>
                        </div>
                    </div>
                    <div class="col-md-6">
                    <div class="row">
                        <div class="col-md-12" style="display:none;" id="dvReason">
                            <div class="form-group row">
                                <label class="col-sm-3 col-form-label">Reject Reason</label>
                                <div class="col-sm-9">
                                    <input type="text" class="form-control" />
                                </div>
                            </div>
                        </div>
                        <div class="col-md-12" style="display:none;" id="dvLogo">
                            <div class="form-group row">
                                <label class="col-sm-3 col-form-label">Asign Logo</label>
                                <div class="col-sm-9">
                                    <input type="file" class="form-control" />
                                </div>
                            </div>
                        </div>
                    </div>
                    </div>

                </div>
                <button type="submit" class="btn btn-primary me-2">Submit</button>
                <button class="btn btn-danger">Reset</button>
            </form>
        </div>
    </div>
</div>

